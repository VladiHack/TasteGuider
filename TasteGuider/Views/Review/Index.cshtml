@model IEnumerable<TasteGuider.Models.Review>

@{
    ViewData["Title"] = "Index";
}
<p>
    <a asp-action="Create" >Create New</a>
</p>
<table id="reservationTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RestaurantId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewText)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if(ViewBag.Id==item.UserId || ViewBag.role=="Admin")
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RestaurantId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReviewText)
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>



                </tr>
            }
            @if(ViewBag.Id!=item.UserId&& ViewBag.role=="User")
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RestaurantId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReviewText)
                    </td>

                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    </td>



                </tr>
            }

        }
    </tbody>
</table>

